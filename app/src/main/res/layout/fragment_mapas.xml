<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.Mapas.Mapas">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.Mapas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPrueba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edt"
            android:textColor="@color/P2"
            android:padding="10dp"
            android:text="Latitud y Longitus"
            android:textAlignment="center"
            android:textSize="18sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/P2"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edt"
            android:padding="10dp"
            android:text="Direccion de la calle"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/P2"
            android:text="Registrar"
            android:textAllCaps="false"
            app:cornerRadius="20dp" />


        <Button
            android:id="@+id/btnAlerta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/P2"
            android:text="Alerta"
            android:textAllCaps="false"
            app:cornerRadius="20dp" />
    </LinearLayout>

</LinearLayout>