<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.Compressor.CompressorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright">

            <ImageView
                android:id="@+id/ivUno"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="@string/empty"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camara" />
        </FrameLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light">

            <ImageView
                android:id="@+id/ivDos"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="@string/empty"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camara" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen Actual" />

            <TextView
                android:id="@+id/tvActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tamaño: 4.4 MB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen Compresa" />

            <TextView
                android:id="@+id/tvCompresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tamaño: 4 KB" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnEscoger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/P5"
        android:text="Escoger Imagen"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnComprimir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/P2"
        android:text="Comprimir Imagen"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/P2"
        android:text="Recortar Imagen"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFoto3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/img_por_defecto" />

        <Button
            android:id="@+id/btnFoto3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Foto"
            android:textAllCaps="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvFoto31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFoto32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFoto33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>